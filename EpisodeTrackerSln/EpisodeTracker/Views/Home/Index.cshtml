@model List<Show>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> signInManager

@{
    ViewData["Title"] = "Home Page";
}


@if ( ViewBag.IsDataAdded == true)
{
    <div class="alert alert-success alert-dismissible">
        <button class="close" data-dismiss="alert">&times;</button>
        Added!
   </div>
}


@if (signInManager.IsSignedIn(User))
{
<h2 class="text-center text-uppercase bg-warning">:: Episode Show List:: </h2>
<a asp-controller="Show" asp-action="Add" class="bg-warning text-success"><span class="far fa-plus"></span>&nbsp; Add New Show</a>
<table class="table table-bordered table-striped table-hover table-responsive">
    <thead>
        <tr>
            <th class="w-60">Title</th>
            <th>Last Episode</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var show in Model)
        {
            <tr>
                <td>@show.Title</td>
                <td>@show.LastEpisodeSeen</td>
                <td>
                    <a asp-controller="Show" asp-action="Edit"
                        asp-route-id="@show.ShowId">Edit</a>
                    &nbsp;&nbsp;
                    <a asp-controller="Show" asp-action="Delete"
                        asp-route-id="@show.ShowId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>  
}



<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
